# After change rum command `skhd --reload`

# reload yabai
cmd + alt + ctrl - r : yabai --restart-service

## Opens:
# terminal
# cmd + alt + ctrl - t : osascript -e 'tell application "iTerm2" to create window with default profile command ""' || open -na iTerm
# cmd + alt + ctrl - t : open -a -n alacritty 
cmd + alt + ctrl - t : osascript -e 'tell application "Alacritty" to create window with default profile command ""' || open -na alacritty
# browser
cmd + alt + ctrl - b : open -a Firefox ; skhd -k "0x35"

## rotate tree 90
cmd + alt + ctrl - r : yabai -m space --rotate 90

## Focus:
# by index
cmd + alt + ctrl - 1 : yabai -m space --focus 1
cmd + alt + ctrl - 2 : yabai -m space --focus 2
cmd + alt + ctrl - 3 : yabai -m space --focus 3
cmd + alt + ctrl - 4 : yabai -m space --focus 4
cmd + alt + ctrl - 5 : yabai -m space --focus 5
cmd + alt + ctrl - 6 : yabai -m space --focus 6
cmd + alt + ctrl - 7 : yabai -m space --focus 7
cmd + alt + ctrl - 8 : yabai -m space --focus 8
cmd + alt + ctrl - 9 : yabai -m space --focus 9
# relative
cmd + alt + ctrl - a : yabai -m space --focus prev
cmd + alt + ctrl - s : yabai -m space --focus next

# monitor
cmd + alt + ctrl - a : yabai -m display --focus 2
cmd + alt + ctrl - s : yabai -m display --focus 1

# Move
# cmd + alt + ctrl + shift - u : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
# cmd + alt + ctrl - i : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
# cmd + alt + ctrl - o : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
# cmd + alt + ctrl - p : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

# Moving windows
shift + cmd + alt + ctrl - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + cmd + alt + ctrl - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + cmd + alt + ctrl - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + cmd + alt + ctrl - 4 : yabai -m window --space 3; yabai -m space --focus 4
shift + cmd + alt + ctrl - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + cmd + alt + ctrl - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + cmd + alt + ctrl - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + cmd + alt + ctrl - 8 : yabai -m window --space 8; yabai -m space --focus 8
shift + cmd + alt + ctrl - 9 : yabai -m window --space 9; yabai -m space --focus 9
shift + cmd + alt + ctrl - 0 : yabai -m window --space 0; yabai -m space --focus 0
